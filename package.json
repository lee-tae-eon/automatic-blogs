{
  "name": "blog-automation",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=24",
    "pnpm": ">=9"
  },
  "scripts": {
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "core:watch": "pnpm --filter @blog-automation/core exec tsc --watch",
    "dev": "concurrently -n \"CORE,APP\" -c \"cyan,magenta\" \"npm run core:watch\" \"pnpm desktop:start\"",
    "cli:build": "pnpm --filter @blog-automation/cli build",
    "core:build": "pnpm --filter @blog-automation/core build",
    "desktop:start": "pnpm --filter @blog-automation/desktop desktop:start",
    "dev:start": "pnpm core:build && pnpm desktop:start"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "concurrently": "^9.2.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "playwright": "^1.45.0"
  }
}
