{
  "name": "blog-automation",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=24",
    "pnpm": ">=9"
  },
  "scripts": {
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "cli:build": "pnpm --filter @blog-automation/cli build",
    "cli:start": "pnpm --filter @blog-automation/cli dev",
    "cli:add": "pnpm --filter @blog-automation/cli add",
    "cli:remove": "pnpm --filter @blog-automation/cli remove",
    "core:build": "pnpm --filter @blog-automation/core build",
    "core:add": "pnpm --filter @blog-automation/core add",
    "core:remove": "pnpm --filter @blog-automation/core remove",
    "desktop:vite": "pnpm --filter @blog-automation/desktop concurrently \"npm run dev\" \"wait-on http://localhost:5173 && npm run electron:start\""
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "playwright": "^1.45.0"
  }
}
